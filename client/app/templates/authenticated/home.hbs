{{! This is the home page template }}
<div class="home-page">
  <main class="main-content">
    <section>
      {{#if @model.gifs.length}}
        {{#each @model.gifs as |gif|}}
          <div class="gif-section">
            <LinkTo @route="authenticated.gif" @model={{gif.id}}>
              <img
                src="{{gif.images.fixed_width.url}}"
                alt="{{gif.title}}"
                class="gif-image"
              />
            </LinkTo>
          </div>
        {{/each}}
      {{else}}
        <p>No GIFs found.</p>
      {{/if}}
    </section>
  </main>
</div>